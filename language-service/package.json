{
  "name": "azure-pipelines-language-service",
  "description": "Azure Pipelines language service",
  "version": "0.6.0",
  "author": "Microsoft",
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index",
  "contributors": [
    {
      "name": "Stephen Franceschelli",
      "email": "Stephen.Franceschelli@microsoft.com"
    },
    {
      "name": "Matt Cooper",
      "email": "vtbassmatt@gmail.com"
    },
    {
      "name": "Ruslan Semenov",
      "email": "ruslan@rsemenov.com"
    }
  ],
  "engines": {
    "node": "*"
  },
  "keywords": [
    "azure-pipelines",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/azure-pipelines-language-server.git"
  },
  "dependencies": {
    "js-yaml": "3.13.1",
    "jsonc-parser": "2.0.2",
    "vscode-json-languageservice": "^4.0.2",
    "vscode-languageserver-types": "^3.16.0",
    "vscode-nls": "^5.0.0",
    "vscode-uri": "^3.0.2",
    "yaml-ast-parser": "0.0.40"
  },
  "devDependencies": {
    "@types/mocha": "5.2.5",
    "@types/node": "^14.0.0",
    "buffer": "^6.0.3",
    "coveralls": "^3.0.2",
    "mocha": "5.2.0",
    "mocha-junit-reporter": "1.18.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "14.1.0",
    "os-browserify": "^0.3.0",
    "rimraf": "^3.0.2",
    "source-map-support": "0.5.5",
    "ts-loader": "^8.0.17",
    "ts-node": "7.0.1",
    "typescript": "^4.1.3",
    "vscode-languageserver-textdocument": "^1.0.1",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && webpack --mode production && npm pack",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "clean": "rimraf lib _bundles",
    "test": "npm run compile && mocha --require ts-node/register --ui tdd ./test/**/*.test.ts",
    "coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive --ui tdd ./test/*.test.ts",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/",
      "out"
    ],
    "all": true
  }
}
