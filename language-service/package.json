{
  "name": "azure-pipelines-language-service",
  "description": "Azure Pipelines language service",
  "version": "0.4.0",
  "author": "Microsoft",
  "license": "MIT",
  "main": "./lib/src/index.js",
  "typings": "./lib/src/index",
  "contributors": [
    {
      "name": "Stephen Franceschelli",
      "email": "Stephen.Franceschelli@microsoft.com"
    },
    {
      "name": "Matt Cooper",
      "email": "vtbassmatt@gmail.com"
    },
    {
      "name": "Ruslan Semenov",
      "email": "ruslan@rsemenov.com"
    }
  ],
  "engines": {
    "node": "*"
  },
  "keywords": [
    "azure-pipelines",
    "LSP"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/azure-pipelines-language-server.git"
  },
  "dependencies": {
    "js-yaml": "3.12.0",
    "jsonc-parser": "2.0.2",
    "vscode-json-languageservice": "3.0.12",
    "vscode-languageserver-types": "3.6.1",
    "vscode-nls": "3.2.2",
    "vscode-uri": "1.0.3",
    "yaml-ast-parser": "0.0.40"
  },
  "devDependencies": {
    "@types/mocha": "5.2.5",
    "@types/node": "9.6.6",
    "coveralls": "^3.0.2",
    "mocha": "5.2.0",
    "mocha-junit-reporter": "1.18.0",
    "mocha-lcov-reporter": "1.3.0",
    "nyc": "13.0.1",
    "shx": "0.3.2",
    "source-map-support": "0.5.5",
    "ts-loader": "5.2.1",
    "ts-node": "7.0.1",
    "typescript": "2.7.2",
    "webpack": "4.20.2",
    "webpack-cli": "3.1.2"
  },
  "scripts": {
    "build": "npm run clean && npm run compile && webpack && npm pack",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "clean": "shx rm -rf lib",
    "test": "npm run compile && mocha --require ts-node/register --ui tdd ./test/**/*.test.ts",
    "coverage": "nyc mocha --require ts-node/register --require source-map-support/register --recursive --ui tdd ./test/*.test.ts",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "test/",
      "out"
    ],
    "all": true
  }
}
